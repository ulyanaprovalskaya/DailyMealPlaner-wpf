<Window x:Class="DailyMealPlaner.Presentation_Layer.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyMealPlaner.Presentation_Layer"
        mc:Ignorable="d"
        Title="Добавить категорию" Height="160" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Height="135" VerticalAlignment="Top" Margin="0,0,0,-6">

        <TextBlock HorizontalAlignment="Left" Margin="24,19,0,0" TextWrapping="Wrap"
                   Text="Введите название категории:" VerticalAlignment="Top" Width="197" Height="20"/>
        <TextBox Name="newCategoryName" HorizontalAlignment="Left" Height="27" Margin="24,44,0,0" TextWrapping="Wrap"
                 Text="" VerticalAlignment="Top" Width="241" TextChanged="newCategoryName_TextChanged"/>

        <Button Name="ok" Content="Oк" IsDefault="True" IsEnabled="False" HorizontalAlignment="Left"
                Margin="153,92,0,0" VerticalAlignment="Top" Width="57" Click="ok_Click"/>
        <Button Content="Отмена" IsCancel="True" HorizontalAlignment="Left"
                Margin="225,92,0,0" VerticalAlignment="Top" Width="57"/>

    </Grid>
</Window>
